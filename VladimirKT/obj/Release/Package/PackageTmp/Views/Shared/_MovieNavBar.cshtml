<div id="movieNavBar" class="navbar navbar-inverse navbar-fixed-top">
	<div class="container">		
		<div  class="navbar-header">			
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			@if (ViewBag.Title != "MovieIndex") { 
			  @Html.ActionLink("Movie Store", "MovieIndex", "Movie", new { area = "" }, new { @class = "navbar-brand" })
			}
		</div>
		<div class="navbar-collapse collapse">
			@if (User.IsInRole("CanManageMovies"))
			{
				<ul class="nav navbar-nav">				
					<li>@Html.ActionLink("Home", "MovieIndex", "Movie")</li>
					<li>@Html.ActionLink("Movies", "ListOfMovies", "Movie")</li>
					<li>@Html.ActionLink("Add new movie", "AddNewMovie", "Movie")</li>
					<li>@Html.ActionLink("Manage Movies", "ManageListOfMovies", "Movie")</li>
					<li>@Html.ActionLink("Back to Vladimir", "Index", "Home")</li>
				</ul>
			}
			else if (User.IsInRole("CanManageCustomer"))
			{
				<ul class="nav navbar-nav">
					<li>@Html.ActionLink("Home", "MovieIndex", "Movie")</li>
					<li>@Html.ActionLink("Movies", "ListOfMovies", "Movie")</li>
					<li>@Html.ActionLink("Customer", "Index", "Customer")</li>				
					<li>@Html.ActionLink("Back to Vladimir", "Index", "Home")</li>
				</ul>
			}
			else
			{
				<ul class="nav navbar-nav">
					<li>@Html.ActionLink("Home", "MovieIndex", "Movie")</li>
					<li>@Html.ActionLink("Movies", "ListOfMovies", "Movie")</li>
					<li>@Html.ActionLink("Back to Vladimir", "Index", "Home")</li>
				</ul>
			}

			@Html.Partial("_LoginPartial")
		</div>
	</div>
</div>

